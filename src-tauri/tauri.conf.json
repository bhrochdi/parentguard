{
  "$schema": "https://schema.tauri.app/config/2.json",
  "productName": "ParentGuard",
  "version": "1.0.0",
  "identifier": "fr.parentguard.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ParentGuard — Contrôle parental",
        "width": 1200,
        "height": 750,
        "minWidth": 1000,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
  "active": true,
  "targets": "all",
  "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.ico"
  ]
}
}
